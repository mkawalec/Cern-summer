  /// Return the integral over the histogram bins
  inline double integral(Histo1DPtr histo) {
    double intg = 0.;
    for ( size_t i = 0; i < histo->numBins(); ++i ) {
      intg += histo->bin(i).area();
    }
    return intg;
  }

