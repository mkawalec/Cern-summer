#! /usr/bin/env bash 
#$ -S /bin/bash
#PBS -N tune-@PROF_JOB

source $HOME/.bashrc

echo "Creating output directory..."
mkdir -p "@PROF_OUTDIR/log-tune/@PROF_JOB"

echo "Running Professor tuning command"


# Run number
N=`python -c "print int('@PROF_JOB')"`

python2.5 `which prof-tune` \
  --refdir @PROF_REFDIR \
  --weights @PROF_OBSFILE \
  --outdir @PROF_OUTDIR \
  --runs @PROF_RUNSFILE \
  --ipoldir @PROF_IPOLDIR \
  --offset $N \
  @PROF_ADD_OPTS \
  &> @PROF_OUTDIR/log-tune/@PROF_JOB/prof-tune.log

exit 0
